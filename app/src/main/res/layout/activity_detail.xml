<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.peliculasdb.peliculasdb.DetailActivity">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:id="@+id/detailPoster"
        android:paddingRight="20dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/detailTitulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/detailPoster"
        android:layout_toEndOf="@+id/detailPoster"
        android:textSize="30dp"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/detailPuntuacion"
        android:layout_below="@+id/detailTitulo"
        android:layout_toRightOf="@+id/detailPoster"
        android:layout_alignRight="@+id/detailTitulo"
        android:layout_alignEnd="@+id/detailTitulo"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/detailFecha"
        android:layout_below="@+id/detailPuntuacion"
        android:layout_toRightOf="@+id/detailPoster"
        android:layout_alignRight="@+id/detailTitulo"
        android:layout_alignEnd="@+id/detailTitulo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/detailDescripcion"
        android:layout_below="@+id/detailPoster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>